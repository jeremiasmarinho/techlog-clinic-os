{
  "name": "techlog-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "NODE_ENV=development ts-node src/server.ts",
    "watch": "tsc -w",
    "migrate": "ts-node scripts/fix_db_schema.ts",
    "migrate:saas": "NODE_ENV=development ts-node scripts/migrate_to_saas.ts",
    "migrate:saas:test": "NODE_ENV=test ts-node scripts/migrate_to_saas.ts",
    "migrate:status-timer": "ts-node scripts/add_status_updated_at.ts",
    "reset-db": "ts-node scripts/reset_db.ts",
    "reset-db-quick": "ts-node scripts/reset_db_quick.ts",
    "reset-db-with-seed": "ts-node scripts/reset_db_with_seed.ts && npm start",
    "seed": "ts-node scripts/force_seed.ts",
    "seed:multi-tenant": "NODE_ENV=development ts-node scripts/seed_multi_tenant.ts",
    "seed:multi-tenant:test": "NODE_ENV=test ts-node scripts/seed_multi_tenant.ts",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:unit": "NODE_ENV=test jest --testPathPattern=tests/.*\\.test\\.ts$",
    "test:integration": "NODE_ENV=test jest tests/integration --verbose",
    "test:verbose": "NODE_ENV=test jest --coverage --verbose",
    "test:db:setup": "ts-node scripts/setup-test-db.ts",
    "test:e2e": "TEST_MODE=true playwright test",
    "test:e2e:ui": "TEST_MODE=true playwright test --ui",
    "test:e2e:headed": "TEST_MODE=true playwright test --headed",
    "test:e2e:debug": "TEST_MODE=true playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:strict": "playwright test tests/e2e/09-ui-strict.spec.ts",
    "test:e2e:strict:headed": "playwright test tests/e2e/09-ui-strict.spec.ts --headed",
    "test:e2e:layout": "playwright test tests/e2e/10-layout-safety.spec.ts",
    "test:e2e:layout:headed": "playwright test tests/e2e/10-layout-safety.spec.ts --headed",
    "test:e2e:fixes": "playwright test tests/e2e/11-fixes-verification.spec.ts",
    "test:e2e:fixes:headed": "playwright test tests/e2e/11-fixes-verification.spec.ts --headed --slow-mo=500",
    "test:e2e:date": "playwright test tests/e2e/12-date-formatting.spec.ts",
    "test:e2e:date:headed": "playwright test tests/e2e/12-date-formatting.spec.ts --headed",
    "test:e2e:nightly": "playwright test tests/e2e/13-nightly-check.spec.ts --reporter=line",
    "test:e2e:nightly:debug": "xvfb-run --auto-servernum playwright test tests/e2e/13-nightly-check.spec.ts --headed",
    "test:e2e:nightly:report": "playwright test tests/e2e/13-nightly-check.spec.ts --reporter=html",
    "lint": "eslint . --ext .ts,.js --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "ci": "npm run type-check && npm run format:check && npm test && npm run test:e2e && npm run build",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs techlog-clinic-api",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:dev": "pm2 start ecosystem.config.js --only techlog-clinic-api-dev",
    "pm2:flush": "pm2 flush",
    "postinstall": "npm run build",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.3",
    "pdfkit": "^0.17.2",
    "sqlite3": "^5.1.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.7",
    "@types/pdfkit": "^0.17.4",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^15.5.2",
    "pm2": "^6.0.14",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
